{
  "extends": "@quasar/app/tsconfig-preset",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./compiled",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },    
    "experimentalDecorators": true,
    "target": "es5",
    "resolveJsonModule": true,
    "noEmit": true,
    "noEmitOnError": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
